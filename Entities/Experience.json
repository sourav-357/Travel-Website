{
  "name": "Experience",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Experience title"
    },
    "destination": {
      "type": "string",
      "description": "Destination name"
    },
    "category": {
      "type": "string",
      "enum": [
        "Adventure",
        "Culture",
        "Food",
        "Nature",
        "History",
        "Art",
        "Music",
        "Sports",
        "Wellness",
        "Shopping"
      ],
      "description": "Experience category"
    },
    "description": {
      "type": "string",
      "description": "Experience description"
    },
    "duration": {
      "type": "string",
      "description": "Duration (e.g., '2 hours', 'Full day')"
    },
    "price_range": {
      "type": "string",
      "enum": [
        "Free",
        "$",
        "$$",
        "$$$",
        "$$$$"
      ],
      "description": "Price range"
    },
    "difficulty": {
      "type": "string",
      "enum": [
        "Easy",
        "Moderate",
        "Challenging",
        "Expert"
      ],
      "description": "Difficulty level"
    },
    "best_time": {
      "type": "string",
      "description": "Best time to do this experience"
    },
    "image_url": {
      "type": "string",
      "description": "Experience image"
    },
    "rating": {
      "type": "number",
      "minimum": 1,
      "maximum": 5,
      "description": "Rating"
    },
    "highlights": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Experience highlights"
    }
  },
  "required": [
    "title",
    "destination",
    "category"
  ]
}